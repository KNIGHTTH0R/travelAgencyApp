{# templates/frontoffice/circuitslist.html.twig #}

{% extends "baselayout.html.twig" %}

{% block title %}{{ parent() }} Liste des programmations {% endblock %}

{% block body %}
<div class="row">
<div class="col-xs-12">
    <h1>Voyages à venir !</h1>
    {% if progslist is not empty %}
        <p>Voici tous les voyages programmés au cours de l'année prochaine :</p>
        <ul>
        {# Loop through list and creeate the list of circuit items. #}
        {% for prog in progslist %}
            <li>
          		<p>Voyage de {{ prog.circuit.dureeCircuit }} jours en <a href="{{ path('circuitshow', { 'id' : prog.id }) }}" }}>{{ prog.circuit.description }}</a> à partir du {{ prog.dateDepart|date('d-m-Y') }}</p>
            </li>
        {% endfor %}
        </ul>
    {% else %}
        <p>Désolé, aucun circuit n'est programmé pour l'an prochain :(</p>
    {% endif %}
</div>
</div>
{% endblock %}
